
<TableLayout
        android:layout_span="3"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android">

    <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
        <Space
                android:layout_width="20px"
                android:layout_height="20px"
                android:id="@+id/space" android:layout_column="3"/>
    </TableRow>


    <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
        <Space
                android:layout_width="20px"
                android:layout_height="20px"
                android:id="@+id/space" android:layout_column="3"/>
    </TableRow>

    <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

        <EditText
                android:gravity="center"
                android:layout_column="0"
                android:layout_span="2"
                android:layout_weight="1"
                android:inputType="number"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="@string/sentenceRequestBoxGreeting"
                android:id="@+id/sentenceIdInputBox" />
    </TableRow>
    <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

        <Button
                android:layout_column="0"
                android:layout_span="2"
                android:layout_weight="1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/searchButtonLabel"
                android:id="@+id/searchButton"/>

    </TableRow>
    <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
        <Space
                android:layout_width="20px"
                android:layout_height="35px"
                android:id="@+id/space" android:layout_column="3"/>
    </TableRow>
    <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

        <Button
                android:layout_column="0"
                android:layout_span="2"
                android:layout_weight="1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/randomSentenceButtonLabel"
                android:id="@+id/randomFetchButton"/>

    </TableRow>

    <!-- **************************************************************************************** -->

</TableLayout>
